{
  "model_name": "ru_bert_parser_with_tagger_GSD",
  "embedder": {
    "name": "ru_bert",
    "dropout": 0.4,
    "use_pymorphy": false
  },
  "encoder": {
    "encoder_type": "lstm",
    "hidden_dim": 256,
    "num_layers": 1,
    "dropout": 0.3,
    "variational_dropout": 0.3,
    "use_weight_drop": true
  },
  "parser": {
    "dropout": 0.1,
    "tag_representation_dim": 128,
    "arc_representation_dim": 512,
    "gram_val_representation_dim": -1,
    "lemma_representation_dim": -1
  },
  "trainer": {
    "batch_size": 32,
    "num_epochs": 7,
    "patience": 5,
    "num_gradient_accumulation_steps": 1,
    "lr": 1e-3,
    "bert_lr": 1e-4,
    "cut_frac": 0.1,
    "gradual_unfreezing": true,
    "discriminative_fine_tuning": true
  },
  "data": {
    "data_dir": "../data",
    "pretrained_models_dir": "../pretrained_models",
    "models_dir": "../models",
    "train_data_all_except": null,
    "train_data": [
      "GramEval2020-GSD-train.conllu"
    ],
    "valid_data": [
      "GramEval2020-GSD-wiki-dev.conllu"
    ]
  }
}